{% extends('views/admin/components/app.html.twig') %}
 {% block title %}Post Listing{% endblock %}
{% block content %}
        <div class="content-wrapper" style="min-height: 916px;">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                        <h1>
                                Simple Tables
                                <small>preview of simple tables</small>
                        </h1>
                        <ol class="breadcrumb">
                                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                                <li><a href="#">Tables</a></li>
                                <li class="active">Simple</li>
                        </ol>
                </section>

                <!-- Main content -->
                <section class="content">
                        {% for message in app.flashes('success') %}
                                <div class="alert alert-success">{{  message }}</div>
                        {% endfor %}
                        <div class="row">
                                <div class="col-xs-12">
                                        <div class="box">
                                                <div class="box-header">
                                                        <h3 class="box-title">Post Listing</h3>

                                                        <div class="box-tools">
                                                                <div class="input-group input-group-sm hidden-xs" style="width: 150px;">
                                                                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                                                                        <div class="input-group-btn">
                                                                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                                                        </div>
                                                                </div>
                                                        </div>
                                                </div>
                                                <!-- /.box-header -->
                                                <div class="box-body table-responsive no-padding">
                                                        <table class="table table-hover">
                                                                <tbody>
                                                                <tr>
                                                                        <th>ID</th>
                                                                        <th>Title</th>
                                                                        <th>User</th>
                                                                        <th>Date</th>
                                                                        <th>Status</th>
                                                                        <th>Description</th>
                                                                        <th>Actions</th>
                                                                </tr>
                                                                {% if posts %}
                                                                        {% for post in posts %}
                                                                                <tr>
                                                                                        <td>{{  post.id }}</td>
                                                                                        <td>{{ post.title }}</td>
                                                                                        <td>Admin</td>
                                                                                        <td>{{ post.getCreatedAt }}</td>
                                                                                        <td>{% if post.status == 1 %}<span class="label label-success">Approved {% else %}<span class="label label-danger">Not Approved{% endif %}</span></td>
                                                                                        <td>{{ post.description }}</td>
                                                                                        <td><a href="{{ path('post.show', { id: post.id}) }}"><button class="btn btn-sm btn-info"><i class="fa fa-edit"></i>Edit</button></a> |
                                                                                                <a href="{{ path('post.delete', { id: post.id}) }}"><button class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i>Delete</button></a></td>
                                                                                </tr>
                                                                        {% endfor %}
                                                                {% endif %}
                                                                </tbody></table>
                                                </div>
                                                <!-- /.box-body -->
                                        </div>
                                        <!-- /.box -->
                                </div>
                        </div>
                </section>
                <!-- /.content -->
        </div>
{% endblock %}