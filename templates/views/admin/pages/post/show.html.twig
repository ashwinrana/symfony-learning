{% extends('views/admin/components/app.html.twig') %}

{% block content %}

    <div class="content-wrapper" style="min-height: 946px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                General Form Elements
                <small>Preview</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">General Elements</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- general form elements disabled -->
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">General Elements</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <form>
                            <label for="title">Title</label>
                            <input type="text" id="title" readonly class="form-control" value="{{ post.title }}">
                            <label for="created_at">Post Published: </label>
                            <input type="text" value="{{ post.createdAt|date("m/d/Y") }}" readonly class="form-control">
                            <label for="description">Description</label>
                            <textarea id="description" class="form-control">{{ post.description }}</textarea>
                            {% if post.image %}
                                <img src="{{ asset('/uploads/' ~ post.image) }}" alt="">
                            {% endif %}
                        </form>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </section>
        <!-- /.content -->
    </div>

{% endblock %}